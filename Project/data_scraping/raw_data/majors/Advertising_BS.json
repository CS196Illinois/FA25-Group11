    "learning_outcomes": [
      {
        "type": "paragraph",
        "content": "for the degree of Bachelor of Science in Advertising"
      },
      {
        "type": "paragraph",
        "content": "Students graduating with a Bachelor of Science in Advertising will be able to:"
      },
      {
        "type": "list",
        "list_type": "ol",
        "content": [
          "Evaluate the ethical, economic, legal, cultural, and historical dimensions of advertising in a global society.",
          "Conduct research and analyze secondary and primary data to develop effective brands and advertising planning and strategy.",
          "Evaluate and analyze media and data for effective advertising and understand the media landscape and media ecosystems.",
          "Turn strategy into innovative thinking, creative concepts, and the production of brand communications.",
          "Apply creative concepts and innovative thinking to produce culturally relevant brand storytelling and content creation.",
          "Effectively collaborate within diverse teams to design and deliver strategic and engaging brand content and presentations."
        ]
      }
